# =====================================
# تنظیمات پیامک (SMS)
# =====================================

# انتخاب سرویس: kavenegar, ghasedak, smsir
SMS_PROVIDER=kavenegar

# کاوه نگار
KAVENEGAR_API_KEY=
KAVENEGAR_SENDER=10008663

# قاصدک
GHASEDAK_API_KEY=
GHASEDAK_SENDER=

# SMS.ir
SMSIR_API_KEY=
SMSIR_LINE_NUMBER=

# =====================================
# تنظیمات ایمیل (Email)
# =====================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@dotshop.ir

# =====================================
# تنظیمات پرداخت (Payment Gateway)
# =====================================

# زرین‌پال
ZARINPAL_MERCHANT_ID=
ZARINPAL_SANDBOX=True

# آیدی‌پی
IDPAY_API_KEY=
IDPAY_SANDBOX=True

# پی‌دات‌آی‌آر
PAYDOTIR_API_KEY=

# =====================================
# تنظیمات ارسال (Shipping)
# =====================================

# پست پیشتاز
POST_API_KEY=
POST_SENDER_CODE=

# تیپاکس
TIPAX_API_KEY=
TIPAX_ACCOUNT_ID=

# اسنپ‌باکس
SNAPPBOX_API_KEY=

# میوه
MIWE_API_KEY=

# =====================================
# تنظیمات Scraping و Crawling
# =====================================

# تعداد Thread همزمان
SCRAPER_MAX_WORKERS=5

# فاصله زمانی بین درخواست‌ها (ثانیه)
SCRAPER_DELAY=2

# تعداد تلاش مجدد در صورت خطا
SCRAPER_RETRY_COUNT=3

# Timeout برای هر درخواست
SCRAPER_TIMEOUT=30

# User-Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =====================================
# تنظیمات Cache و Performance
# =====================================

# مدت زمان کش محصولات (ثانیه)
PRODUCT_CACHE_TTL=1800

# مدت زمان کش قیمت‌ها (ثانیه)  
PRICE_CACHE_TTL=900

# مدت زمان کش API (ثانیه)
API_CACHE_TTL=300

# =====================================
# تنظیمات Celery (Task Queue)
# =====================================

CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Asia/Tehran

# =====================================
# تنظیمات Monitoring و Logging
# =====================================

LOG_LEVEL=INFO
LOG_FILE=/var/log/dotshop/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Sentry (اختیاری)
SENTRY_DSN=

# =====================================
# تنظیمات Backup
# =====================================

BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# =====================================
# تنظیمات Advanced
# =====================================

# حداکثر تعداد محصول در یک صفحه
MAX_PRODUCTS_PER_PAGE=50

# حداکثر اندازه فایل آپلود (مگابایت)
MAX_UPLOAD_SIZE_MB=10

# فعال‌سازی CORS
CORS_ENABLED=True
CORS_ORIGINS=http://localhost:3000,https://dotshop.ir

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

