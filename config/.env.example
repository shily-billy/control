# =================================
# تنظیمات فروشگاه DOT SHOP
# =================================

# ----- مشخصات فروشگاه -----
SHOP_NAME=فروشگاه نقطه
SHOP_DOMAIN=dotshop.ir
SHOP_OWNER=نام صاحب فروشگاه
SHOP_EMAIL=info@dotshop.ir
SHOP_PHONE=09123456789

# ----- دیتابیس PostgreSQL -----
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dotshop
DB_USER=dotshop_user
DB_PASSWORD=change_this_secure_password_123

# ----- Redis Cache -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----- Backend Settings -----
BACKEND_PORT=8000
BACKEND_WORKERS=4
DEBUG=True
ENVIRONMENT=development

# ----- Frontend Settings -----
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# ----- Security -----
SECRET_KEY=generate_random_64_character_string_here_very_important
JWT_SECRET=another_random_string_for_jwt_tokens_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ----- Telegram Bot -----
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_ADMIN_ID=123456789
TELEGRAM_WEBHOOK_URL=https://dotshop.ir/webhook/telegram

# ----- WhatsApp Business API (اختیاری) -----
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# ----- Instagram API (اختیاری) -----
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

